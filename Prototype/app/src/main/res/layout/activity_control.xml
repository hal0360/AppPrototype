<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:baselineAligned="true"
        android:background="#FAEBD7"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.10">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.8">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="50dp"
                android:id="@+id/textview1"
                android:text="Popup appearing style"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textview1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Slide in, slide out " />
                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Zoom in, zoom out" />
                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Fade in, fade out" />
            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/radioGroup"
                android:layout_marginTop="50dp"
                android:id="@+id/textview2"
                android:text="Popup transparency"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textview2"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="None" />
                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Low" />
                <RadioButton
                    android:id="@+id/radioButton6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Medium" />
                <RadioButton
                    android:id="@+id/radioButton7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="High" />
            </RadioGroup>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disappear on touch"
                android:id="@+id/checkBox"
                android:textSize="22sp"
                android:onClick="ape"
                android:layout_below="@+id/radioGroup2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Time to disappear (sec)"
                android:id="@+id/textView"
                android:layout_below="@+id/checkBox"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="50dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="numberSigned"
                android:ems="4"
                android:gravity="center"
                android:maxLength="2"
                android:id="@+id/editText"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/ddrrrra"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle"
                android:onClick="up1"
                android:text="+"
                android:id="@+id/button4"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#FAEBD7"
                android:layout_alignTop="@+id/editText"
                android:layout_toEndOf="@id/editText"
                android:layout_toRightOf="@+id/editText"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#FAEBD7"
                android:background="@drawable/circle"
                android:onClick="down1"
                android:text="-"
                android:id="@+id/button5"
                android:layout_alignTop="@+id/editText"
                android:layout_toEndOf="@id/editText"
                android:layout_toRightOf="@+id/editText"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popup every (min)"
                android:id="@+id/checkBox2"
                android:textSize="22sp"
                android:onClick="skull"
                android:layout_below="@+id/editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="numberSigned"
                android:ems="4"
                android:gravity="center"
                android:maxLength="2"
                android:id="@+id/editText2"
                android:layout_below="@+id/checkBox2"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ddrrrra"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle"
                android:onClick="up2"
                android:text="+"
                android:id="@+id/button6"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#FAEBD7"
                android:layout_alignTop="@+id/editText2"
                android:layout_toEndOf="@id/editText2"
                android:layout_toRightOf="@+id/editText2"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#FAEBD7"
                android:onClick="down3"
                android:background="@drawable/circle"
                android:text="-"
                android:id="@+id/button7"
                android:layout_alignTop="@+id/editText2"
                android:layout_toEndOf="@id/editText2"
                android:layout_toRightOf="@+id/editText2"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:background="@drawable/mybutton"
                android:textSize="27sp"
                android:textColor="#FAEBD7"
                android:textStyle="bold"
                android:onClick="goback"
                android:id="@+id/button"
                android:layout_centerInParent="true"
                android:layout_below="@+id/editText2"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textView10"
                android:layout_marginTop="100dp"
                android:layout_below="@+id/editText2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.10">
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
